<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0" >
   
    <!-- 我要提问界面  提交键：askques_up 提问问题：askques_title 提问内容：askques_content 选择老师：askques_teacher -->
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="55dp"
    	
    	android:orientation="horizontal"
    	android:background="@drawable/title_ques">
    	
    	<Button
         	android:id="@+id/askques_back"
         	android:background="@drawable/button_back"
    	    android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"/>
         
    	
    	
     	<Button
         	android:id="@+id/askques_up"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_marginLeft="260dp"
    	    android:layout_marginTop="15dp"
         	android:text="提问"
         	android:textSize="12dp"
        	android:textColor="#FFFFFF"
        	android:background="#019ec7"
         />
	</LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	
    	android:orientation="horizontal">
     	<TextView 
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:layout_marginLeft="5dp"
     	    android:text="*"
     	    android:textColor="#FF0000"/>
     	<TextView 
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:text="问题："/>
		<EditText
        	android:id="@+id/askques_title"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:hint="请在这里概述您的问题"
        	android:layout_marginRight="5dp"
        	android:layout_marginTop="1dp"
        	android:maxLines="1"
        	android:background="@drawable/white"
        />
	</LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	
    	android:orientation="horizontal">
     	<TextView 
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:layout_marginLeft="5dp"
     	    android:text="*"
     	    android:textColor="#FF0000"/>
     	<TextView 
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:text="内容："/>
		
        
        
	
	<EditText
        	android:id="@+id/askques_content"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:hint="请在这里详细描述你的问题"
        	android:layout_marginTop="3dp"
        	android:layout_marginLeft="0dp"
        	android:layout_marginRight="5dp"
        	android:maxLines="3"
        	android:lines="3"
        	android:background="@drawable/white"/>
	</LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    	
    android:orientation="horizontal">
     	<TextView 
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:layout_marginLeft="5dp"
     	    android:text="*"
     	    android:textColor="#FF0000"
     	    android:layout_marginTop="3dp"/>
     	<TextView 
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:text="选择老师："
     	    android:layout_marginTop="3dp"/>
     	    
		<Spinner
        	android:id="@+id/askques_teacher"
        	android:layout_width="80dp"
        	android:layout_height="20dp"
        	android:entries="@array/teacher"
        	android:layout_marginTop="3dp"
        	android:background="@drawable/spinner"
        	
        />
	</LinearLayout>
	
</LinearLayout>
